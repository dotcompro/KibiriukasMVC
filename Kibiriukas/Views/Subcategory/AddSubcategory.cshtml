@using Kibiriukas.Models
@model AddSubcategoryViewModel
@{
    ViewBag.Title = "Add new subcategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<content>
    <h1>@ViewBag.Title</h1>
    <div class="row">
        <div class="col-md-8">
            <section class="subcategoryAddForm">
                @using (Html.BeginForm("AddSubcategory", "Subcategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {

                    <div class="form-group">
                        @Html.LabelFor(m => m.Categories, new { @class = "col-md-10 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.CategoryId, new SelectList(Model.Categories, "CategoryId", "CategoryTitle"), new { @class = "form-control" })
                            @* Ienummerable List<>*@ @*sukuriamas naujas list is ienummerable List*@ @*index or id for current value*@ @*value in the list*@
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.SubcategoryTitle, new { @class = "col-md-10 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.SubcategoryTitle, new { @class = "form-control" })
                        </div>
                    </div>


                    <button class="submitButton" type="submit">
                        <span class="buttonPrettifier"></span>
                        <p>Add</p>
                    </button>
                }
            </section>
        </div>
    </div>

</content>

